            <li><a class="tip social-button" href="https://www.fiverr.com/devnadim" title="Fiverr"><i class="fa fa-fonticons" target="_blank"></i></a></li>
          </ul>
          <!-- /Social buttons -->
        </div>
        <!-- Navigation & Social buttons -->
      </header>
      <!-- /Header -->

      <!-- Mobile Header -->
      <div class="mobile-header mobile-visible">
        <div class="mobile-logo-container">
          <div class="mobile-site-title">{{authorNameShort}}</div>
        </div>

        <a class="menu-toggle mobile-visible">
          <i class="fa fa-bars"></i>
        </a>
      </div>
      <!-- /Mobile Header -->

      <!-- Main Content -->
      <div id="main" class="site-main">
        <!-- Page changer wrapper -->
        <div class="pt-wrapper">
          <!-- Subpages -->
          <div class="subpages">

           {{> home_section}}

           {{> about_section}}

           {{> resume_section}}

           {{> portfolio_section}}

           {{> blog_section}}

          {{> contact_section}}

           

          </div>
        </div>
